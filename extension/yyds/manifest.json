{
  "manifest_version": 2,
  "name": "YYDS",
  "version": "1.0.1",
  "description": "yys tools by choco",
  "author": "CHOCO",
  "icons": {
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "js/jquery.js",
        "js/info.js",
        "js/helper.js",
        "js/content-script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "js/inject.js"
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}
